{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":rebaseStalePrs"
  ],
  "enabledManagers": [
    "argocd",
    "kubernetes"
  ],
  "argocd": {
    "fileMatch": [
      "argocd-apps/.+\\.yaml$",
      "manifests/argocd/.+\\.yaml$"
    ]
  },
  "kubernetes": {
    "fileMatch": [
      "deploy",
      "cronjob",
      "tunnel"
    ]
  },
  "hostRules": [
    {
      "hostType": "docker",
      "matchHost": "docker.io",
      "username": "kenlasko",
      "password": "{{ secrets.DOCKER_CREDS }}"
    }
  ],
  "packageRules": [
    {
      "matchManagers": [
        "argocd",
        "kubernetes"
      ],
      "matchUpdateTypes": [
        "minor", 
        "patch"
      ],
      "matchPackageNames": [
        "**/!(cilium|descheduler)"
      ],
      "automerge": true,
      "automergeType": "branch",
      "ignoreTests": true
    }
  ]
}
